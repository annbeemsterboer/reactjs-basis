{
  "name": "Node.js",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder}/oefeningen/createElement,target=/workspace,type=bind,consistency=cached",
  "portsAttributes": {
    "3000": {
      "label": "Web applicatie",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000],
  "waitFor": "onCreateCommand",
  "updateContentCommand": "yarn install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "yarn start"
  },
  "customizations": {
    "codespaces": {
      "openFiles": ["src/index.js"]
    }
  }
}
