{
    "name": "Node.js",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:0-18-bullseye",
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder}/oefeningen/denken-in-componenten,target=/workspace,type=bind,consistency=cached",
    "forwardPorts": [3000],
    "postCreateCommand": "yarn install",
    "postAttachCommand": "yarn start",
    "remoteUser": "node",
    "customizations": {
        "codespaces": {
            "openFiles": ["src/App.js"]
        }
    }
}