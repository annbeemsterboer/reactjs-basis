{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "oefeningen/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.6.0",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
   "turbo": {
     "pipeline": {
       "build": {
         "dependsOn": [
           "^build"
         ],
         "outputs": [
           "dist/**",
           ".next/**"
         ]
       },
       "lint": {
         "outputs": []
       },
       "dev": {
         "cache": false
       }
     }
   }
}
